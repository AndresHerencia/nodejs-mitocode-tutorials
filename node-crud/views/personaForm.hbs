<div class="container">
    <br>
    <form action="/personaForm/persona/operar" method="POST">
        <input type="hidden" name="_id" value="{{persona._id}}"/>
        <div class="form-group">
            <label for="Nombres">Nombres</label>
            <input type="nombre" class="form-control" id="nombre" name="nombre" value={{persona.nombre}}>
        </div> 
        <div class="form-group">
            <label for="Apellidos">Apellidos</label>
            <input type="apellido" class="form-control" id="apellido" name="apellido" value={{persona.apellido}}>
        </div> 
        <div class="form-group">
            <label for="Mensaje">Mensaje</label>
            <input type="mensaje" class="form-control" id="mensaje" name="mensaje" value={{persona.mensaje}}>
        </div> 
        <button type="submit" class="btn btn-primary">Aceptar</button>
        <a href="/" class="btn btn-danger">Cancelar</a>

    </form>
</div>